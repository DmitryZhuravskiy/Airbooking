.latest-news
	padding-top 106px
	padding-bottom 128px
	
	.latest-news__title
		font-size 72px
		text-align center
		font-family "GildaDisplay"
		color #686868
		
	.latest-news__cards
		display flex
		flex-direction row
		justify-content flex-around
		width 1230px
		
		.latest-news__card
			width 371px
			height 294px
			
			.latest-news__sticker
				display none
				width 100%
				height 100%
				padding-left 25px
				box-sizing border-box
				
			.sticker__title
				margin-top 20px
				margin-bottom 23px
				font-size 24px
				font-family "GildaDisplay"
				text-align left
				color #686868
				
			.sticker__date
				marign-bottom 30px
				font-size 14px
				text-align left
				color #a2a2a2
				
			.sticker__description
				margin-bototm 28px
				font-size 16px
				line-height 30px
				font-weight 300
				text-align left
				color #a2a2a2
				
			.sticker__link
				padding 17px 20px
				background-color #0e6fb3
				color #ffffff
			
		.latest-news__card:nth-of-type(1)
			background url("../image/latest-news-1.jpg")
			
		.latest-news__card:nth-of-type(2)
			background url("../image/latest-news-2.jpg")
			
		.latest-news__card:nth-of-type(3)
			background url("../image/latest-news-3.jpg")
			
		.latest-news__card:nth-of-type(2)
			background url("../image/latest-news-5.jpg")
			
		.latest-news__card:nth-of-type(2),
		.latest-news__card:nth-of-type(5)
			
			.latest-news__card-name
				color white
				margin-left 25px
				margin-top 210px
				margin-bottom 22px
				font-size 24px
				font-family "GildaDisplay"
				text-align left
				
			.latest-news__card-date
				color white
				font-size 14px
				margin-left 25px
				text-align left
				
		.latest-news__card:nth-of-type(4),
		.latest-news__card:nth-of-type(6)
			
			.latest-news__sticker
				display block

