.footer-contacts-and-links
	font-size 16px
	line-height 30px
	
	.footer-contacts-and-links__title
		width 213px
		height 34px
		margin-bottom 42px
		background-image url("../image/airbooking-footer-logo.png")
		
	.footer-contacts-and-links__description
		margin-bottom 40px
		font-size 16px
		line-height 30px
		
	.footer-contacts-and-links__adress
		position relative
		padding-left 50px
		margin-bottom 32px
		
		&:before
			content ""
			position absolute
			top 0
			left 0
			width 30px
			height 42px
			background-image url("../image/adress.png")
			
		
	.footer-contacts-and-links__phone-number
		position relative
		padding-left 50px
		
		&:before
			content ""
			position absolute
			top 0
			left 0
			width 32px
			height 43px
			background-image url("../image/phone.png")
